<?xml version="1.0" ?>
<component name="org.openwide.test.ecmtypes">

  <extension target="org.nuxeo.ecm.platform.types.TypeService" point="types">
    
    <type id="Service" coretype="Service">
      <label>Service</label>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>descriptorChooser</layout>
        <layout>serviceTags</layout>
        <layout>files</layout>
      </layouts>
    </type>
    
     <type id="ServiceDescriptor" coretype="ServiceDescriptor">
      <label>Service Descriptor</label>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <!--<layout>heading</layout>-->
        <layout>fileRequired</layout>
        <layout>serviceChooser</layout>
        <layout>endpoints</layout>
      </layouts>
    </type>
    
     <type id="WSDL" coretype="WSDL">
      <label>WSDL</label>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <!--<layout>heading</layout>-->
        <layout>fileRequired</layout>
        <layout>serviceChooser</layout>
        <layout>endpoints</layout>
      </layouts>
    </type>
    
    <type id="WorkspaceRoot" coretype="WorkspaceRoot">
      <subtypes>
        <type>Service</type>
        <type>ServiceDescriptor</type>
        <type>WSDL</type>
      </subtypes>
    </type>
    
    <type id="Workspace" coretype="Workspace">
      <subtypes>
        <type>Service</type>
        <type>ServiceDescriptor</type>
        <type>WSDL</type>
      </subtypes>
    </type>
    
    <type id="Folder" coretype="Folder">
      <subtypes>
        <type>Service</type>
        <type>ServiceDescriptor</type>
        <type>WSDL</type>
      </subtypes>
    </type>
    
  </extension>
  
</component>