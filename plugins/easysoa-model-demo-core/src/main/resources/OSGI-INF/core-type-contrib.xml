<?xml version="1.0"?>
<component name="org.openwide.test.coretypes">

  <!-- Déclaration des schémas -->
  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="endpoints" src="schemas/endpoints.xsd" prefix="endp" />
    <schema name="serviceTags" src="schemas/serviceTags.xsd" prefix="stags" />
    <schema name="wsdlBindings" src="schemas/wsdlBindings.xsd" prefix="wsdl" />
    <schema name="querynav2" src="schemas/querynav2.xsd" />
  </extension>
  
  <!-- Enregistrement des nouveaux types de documents -->
  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
  
    <doctype name="Service" extends="Document">
	  <schema name="common"/>
	  <schema name="note"/>
	  <schema name="uid"/>
	  <schema name="dublincore"/>
      <schema name="files" />
      <schema name="serviceTags" />
      <facet name="Commentable" />
      <facet name="Versionable" />
      <facet name="Indexable" />
    </doctype>
    
    <doctype name="ServiceDescriptor" extends="File">
      <schema name="endpoints"/>
      <facet name="Versionable" />
      <facet name="Indexable" />
    </doctype>
  
    <doctype name="WSDL" extends="ServiceDescriptor">
      <schema name="wsdlBindings"/>
      <facet name="Versionable" />
      <facet name="Indexable" />
    </doctype>
    
    <!-- Sert uniquement pour la navigation virtuelle -->
    <doctype name="QueryNav2" extends="Document">
      <schema name="querynav2" />
    </doctype>
    
  </extension>
    
</component>
