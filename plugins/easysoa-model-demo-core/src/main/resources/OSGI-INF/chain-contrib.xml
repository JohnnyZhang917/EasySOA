<?xml version="1.0" encoding="UTF-8"?>
<!-- NON UTILISE : NE MARCHE PAS
 (Est sensé gérer le déplacement des Services et Descripteurs dans les bons dossiers par content automation) -->
<component name="org.openwide.test.chain">
  
  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent" point="chains">
    <chain id="moveDescriptors">
      <operation id="Context.FetchDocument"/>
      <operation id="Document.Move">
        <param type="document" name="target">expr:@{Document.domain}/Descripteurs/@{Document.type}</param>
      </operation>
    </chain>
    <chain id="moveServices">
      <operation id="Context.FetchDocument"/>
      <operation id="Document.Move">
        <param type="document" name="target">expr:@{Document.domain}/Services</param>
      </operation>
    </chain>
  </extension>

  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent" point="event-handlers">
    <handler chainId="moveDescriptors">
      <event>documentCreated</event>
      <filters>
        <doctype>WSDL</doctype>
        <doctype>ServiceDescriptor</doctype>
      </filters>
    </handler>
    <handler chainId="moveServices">
      <event>documentCreated</event>
      <filters>
        <doctype>Service</doctype>
      </filters>
    </handler>
  </extension>
  
</component>