<?xml version="1.0"?>
<component name="org.easysoa.contrib.directories">

  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory" point="directories">

    <directory name="application">
      <schema>vocabulary</schema>
      <dataSource>java:/nxsqldirectory</dataSource>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>voc_application</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>vocabularies/application.csv</dataFile>
      <createTablePolicy>on_missing_columns</createTablePolicy>
    </directory>

    <directory name="environment">
      <schema>vocabulary</schema>
      <dataSource>java:/nxsqldirectory</dataSource>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>voc_environment</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>vocabularies/environment.csv</dataFile>
      <createTablePolicy>on_missing_columns</createTablePolicy>
    </directory>
    
    <directory name="server">
      <schema>xvocabulary</schema> <!-- not "vocabulary" -->
      <parentDirectory>environment</parentDirectory> <!-- "server" is a sub-vocabulary of "environement" -->
      <dataSource>java:/nxsqldirectory</dataSource>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>voc_server</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>vocabularies/server.csv</dataFile>
      <createTablePolicy>on_missing_columns</createTablePolicy>
    </directory>
    
  </extension>

</component>
