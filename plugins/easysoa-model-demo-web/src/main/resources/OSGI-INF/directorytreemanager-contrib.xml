<?xml version="1.0"?>

<component name="org.easysoa.web.contrib.directorytreemanager">

  <require>org.nuxeo.ecm.webapp.directory.DirectoryTreeService</require>
  <require>org.nuxeo.runtime.started</require>
  <require>org.nuxeo.ecm.virtualnavigation.directory.DirectoryTreeService.contrib</require>

  <extension target="org.nuxeo.ecm.webapp.directory.DirectoryTreeService"
    point="trees">
    
    <directoryTree name="bySubjectsNavigation" enabled="false" />
    <directoryTree name="byCoverageNavigation" enabled="false" />
    
    <directoryTree name="byApplicationNavigation" label="label.easysoa.navapplication"
      contentView="byApplicationContentView" field="application" schema="querynav2"
      outcome="application_virtual_navigation" enabled="true">
      <directory>application</directory>
    </directoryTree>
    	
    <directoryTree name="byLocationNavigation" label="label.easysoa.navlocation"
      contentView="byLocationContentView" field="location" schema="querynav2"
      outcome="location_virtual_navigation">
      <directory>environment</directory>
      <directory>server</directory>
    </directoryTree>
    
    <directoryTree name="byFeatureNavigation" label="label.easysoa.navfeature"
      contentView="byFeatureContentView" field="location" schema="querynav2"
      outcome="feature_virtual_navigation" enabled="true">
      <directory>environment</directory>
    </directoryTree>
   
  </extension>

</component>