<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.openwide.easysoa</groupId>
	<artifactId>esperfrascatipoc</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>esperfrascatipoc</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>Frascati</id>
			<name>Frascati repository</name>
			<url>http://maven.ow2.org/maven2/org/ow2/frascati/</url>
		</repository>
		<repository>
			<id>Download.java.net</id>
			<name>Download.java.net repository</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		<repository>
			<id>ow2-snapshot</id>
			<url>http://maven.ow2.org//maven2-snapshot</url>
		</repository>
		<repository>
			<id>eclipse mirror</id>
			<name>Eclipse EMF Mirror</name>
			<url>http://www.openarchitectureware.org/m2</url>
		</repository>
		<repository>
			<id>apache.incubator</id>
			<url>http://people.apache.org/repo/m2-incubating-repository</url>
		</repository>
		<repository>
			<id>Nuxeo</id>
			<name>Nuxeo Public Releases Repository</name>
			<url>https://maven.nuxeo.org/nexus/content/repositories/public-releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>INRIA gforge</id>
			<url>http://maven-repo.gforge.inria.fr/releases/</url>
		</repository>		
	</repositories>

	<dependencies>
	    
	    <!-- frascati -->
		<dependency><!-- base frascati -->
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-binding-factory</artifactId>
			<version>1.4</version>
		</dependency>	
		<dependency><!-- else no frascati class generation -->
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-runtime-factory</artifactId>
			<version>1.4</version>
		</dependency>
		<!-- dependency> auto imported by frascati runtime factory
			<groupId>org.eclipse.jdt</groupId>
			<artifactId>core</artifactId>
			<version>3.3.0_771</version>
			<version>3.5.0</version>
			<scope>test</scope>
		</dependency -->
		<!-- dependency> sometimes requires by frascati internals or tools
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-implementation-fractal</artifactId>
			<version>1.4</version>
		</dependency -->		
		<dependency>
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-binding-ws</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-binding-http</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.frascati</groupId>
			<artifactId>frascati-binding-rest</artifactId>
			<version>1.4</version>
		</dependency>
		<!-- to run it with mvn -Prun -->
		<dependency>
        	<groupId>org.ow2.frascati.mojo</groupId>
        	<artifactId>frascati-launcher-plugin</artifactId>
        	<version>1.4</version>
        	<type>maven-plugin</type>
        </dependency>
		
	    <!-- esper -->
		<dependency>
			<groupId>com.espertech</groupId>
			<artifactId>esper</artifactId>
			<version>4.2.0</version>
		</dependency>
		
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>jsr311-api</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency><!-- for obsolete code -->
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-client</artifactId>
			<version>1.8-ea02</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20090211</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.1.1</version>
		</dependency>

		<!-- TEST -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
				<version>2.3.2</version>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>run</id>
			<build>
				<defaultGoal>org.ow2.frascati.mojo:frascati-launcher-plugin:1.4:exec</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.ow2.frascati.mojo</groupId>
						<artifactId>frascati-launcher-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<executable>java</executable>
							<arguments>
							</arguments>
							<!--<loggingConfFile>${logging.conf.file}</loggingConfFile> -->
							<!--<composite>${composite.file}</composite> -->
							<!--<service>${service.name}</service> -->
							<!--<method>${method.name}</method> -->
							<!--<methodParams>${method.params}</methodParams> -->
							<composite>httpProxy</composite>
							<!-- useFscript>true</useFscript -->
							<useFscript>false</useFscript>
						</configuration>
						<dependencies>
							<!-- other poc deps ? -->
							<!-- other frascati deps ? -->
							<!-- dependency> <groupId>org.ow2.frascati</groupId> <artifactId>frascati-implementation-fractal</artifactId> 
								<version>1.4</version> </dependency -->
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
