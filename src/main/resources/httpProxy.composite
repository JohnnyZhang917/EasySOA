<?xml version="1.0" encoding="UTF-8"?>
<sca:composite xmlns:sca="http://www.osoa.org/xmlns/sca/1.0" xmlns:frascati="http://frascati.ow2.org/xmlns/sca/1.1" xmlns:tuscany="http://tuscany.apache.org/xmlns/sca/1.0" name="httpProxy">

  <!-- HTTP Proxy -->
  <sca:component name="httpProxyService">
    <sca:implementation.java class="com.openwide.easysoa.esperpoc.HttpProxyImpl"/>
    <!--<sca:service name="httpServiceInput" requires="esperIntent">-->
    <sca:service name="httpServiceInput">
      <sca:interface.java interface="javax.servlet.Servlet"/>
      <tuscany:binding.http uri="http://localhost:8082/"/>
    </sca:service>
    <sca:reference name="runManager" target="runManagerComponent" />
  </sca:component>    
    
  <!-- Run Manager -->    
  <sca:component name="runManagerComponent">
    <sca:service name="runManagerService">
      <sca:interface.java interface="com.openwide.easysoa.esperpoc.run.RunManager"/>
    </sca:service>
    <sca:implementation.java class="com.openwide.easysoa.esperpoc.run.RunManagerImpl" />
  </sca:component>
  
  <!-- HTTP Client to drive the proxy -->
  <sca:component name="httpProxyDriver">
    <sca:implementation.java class="com.openwide.easysoa.esperpoc.HttpProxyDriverImpl"/>
    <sca:service name="httpServiceDriver">
      <sca:interface.java interface="com.openwide.easysoa.esperpoc.HttpProxyDriver"/>
      <frascati:binding.rest uri="http://localhost:8084/"/>
    </sca:service>
    </sca:component>
</sca:composite>
