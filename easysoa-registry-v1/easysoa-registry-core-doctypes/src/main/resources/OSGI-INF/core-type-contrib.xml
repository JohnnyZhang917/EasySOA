<?xml version="1.0"?>
<component name="org.easysoa.registry.boilerplate.coretypes.contrib">


  <!-- ===================== -->
  <!-- Core doctypes schemas -->
  <!-- ===================== -->

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="url" src="schemas/intelligent-system-tree-root.xsd" prefix="intsys" />
  </extension>

  <!-- ============= -->
  <!-- Core doctypes -->
  <!-- ============= -->
  <extension target="org.nuxeo.ecm.core.schema.TypeService"
    point="doctype">

    <!-- SoaNode tagging facet, allowing for queries such as #{document.hasFacet("SoaNode")} -->
    <facet name="SoaNode" />

    <!-- Abstract doctypes -->
    <doctype extends="Document" name="SoaNode">
      <schema name="common" />
      <schema name="dublincore" />
      <facet name="SoaNode" />
      <facet name="Commentable" />
      <facet name="Versionable" />
      <facet name="Publishable" />
    </doctype>
    <doctype extends="SoaNode" name="EndpointConsumer">
      <facet name="Folderish" />
    </doctype>

    <!-- Systems hierarchies -->
    <doctype extends="Folder" name="SystemTreeRoot">
      <schema name="dublincore" />
      <facet name="Commentable" />
      <facet name="Versionable" />
      <facet name="Publishable" />
    </doctype>
    <doctype extends="SystemTreeRoot" name="IntelligentSystemTreeRoot">
    </doctype>
    <doctype extends="SoaNode" name="System">
      <facet name="Folderish" />
    </doctype>

    <!-- Architecture level -->
    <doctype extends="SoaNode" name="SoftwareComponent">
      <facet name="Folderish" />
    </doctype>
    <doctype extends="SoaNode" name="Service">
      <facet name="Folderish" />
    </doctype>

    <!-- Implementation level -->
    <doctype extends="EndpointConsumer" name="Deliverable">
      <facet name="EndpointConsumer" />
    </doctype>
    <doctype extends="SoaNode" name="ServiceImplementation">
      <facet name="Folderish" />
    </doctype>
    <doctype extends="SoaNode" name="OperationImplementation">
    </doctype>

    <!-- Deployment level -->
    <doctype extends="EndpointConsumer" name="DeployedDeliverable">
    </doctype>
    <doctype extends="SoaNode" name="Endpoint">
      <facet name="Folderish" />
    </doctype>

  </extension>

</component>
