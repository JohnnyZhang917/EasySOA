<assembly>
    <id>bin</id>
    <formats>
    	<format>tar.gz</format>
    	<format>tar.bz2</format>
    	<format>zip</format>
	</formats>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.openwide.sca:proxy</include>
            </includes>
            </dependencySet>
    </dependencySets>    
</assembly>
