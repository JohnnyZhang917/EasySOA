  <build>
    <plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<configuration>
				<source>1.6</source>
				<target>1.6</target>
			</configuration>
		</plugin>
        <!-- Configuration of maven-assembly-plugin -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.2.1</version><!--$NO-MVN-MAN-VER$ -->
            <configuration>
                <!-- Specifies the configuration file of the assembly plugin -->
                <descriptors>
                    <descriptor>src/main/resources/assembly/assembly.xml</descriptor>
                </descriptors>
            </configuration>
            <executions>
			  <execution>
			    <id>make-assembly</id>
			    <phase>package</phase>
			    <goals>
			      <goal>assembly</goal>
			    </goals>
			  </execution>
			</executions>
        </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>run</id>
      <build>
        <defaultGoal>org.ow2.frascati.mojo:frascati-launcher-plugin:1.5-SNAPSHOT:exec</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.ow2.frascati.mojo</groupId>
            <artifactId>frascati-launcher-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <executable>java</executable>
              <arguments>
              </arguments>
              <!--<loggingConfFile>${logging.conf.file}</loggingConfFile> -->
              <!--<composite>${composite.file}</composite> -->
              <!--<service>${service.name}</service> -->
              <!--<method>${method.name}</method> -->
              <!--<methodParams>${method.params}</methodParams> -->
              <composite>src/main/resources/scaffoldingProxy</composite>
              <!-- useFscript>true</useFscript -->
              <useFscript>false</useFscript>
            </configuration>
            <dependencies>
              <!-- other poc deps ? -->
              <!-- other frascati deps ? -->
              <!-- dependency> <groupId>org.ow2.frascati</groupId> <artifactId>frascati-implementation-fractal</artifactId> 
                <version>1.4</version> </dependency -->
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
