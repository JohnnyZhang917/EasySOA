      <groupId>org.ow2.easywsdl</groupId>
      <artifactId>easywsdl-wsdl</artifactId>
      <version>2.1</version>
    </dependency>
    <!-- Don't use this version of EasyWSDL : no support for WSDL 2 yet -->
    <!--<dependency> <artifactId>easywsdl11-api</artifactId> <groupId>com.ebmwebsourcing.easywsdl</groupId> <version>3.0_40M1</version> 
