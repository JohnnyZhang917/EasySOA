<?xml version="1.0" encoding="UTF-8"?>
<component name="org.easysoa.core.contrib.layout.serviceref">
  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">
    
    <!-- Service reference layout -->
    <layout name="serviceref">
      <templates>
        <template mode="any">/layouts/layout_easysoa_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>serviceref_refPath</widget>
        </row>
        <row>
          <widget>serviceref_refPathLink</widget>
        </row>
        <row>
          <widget>serviceref_refUrl</widget>
        </row>
       </rows>
      <widget name="serviceref_refPath" type="text">
	      <labels>
	        <label mode="any">label.easysoa.serviceref.refPath</label>
	      </labels>
	      <translated>true</translated>
	      <fields>
	        <field>sref:refPath</field>
	      </fields>
	  </widget>
      <widget name="serviceref_refPathLink" type="template"><!-- listing_big_icon_type_link -->
	      <labels>
	        <label mode="any">label.easysoa.serviceref.refPathLink</label>
	      </labels>
	      <translated>true</translated>
	      <fields>
	        <field>sref:refPath</field>
	      </fields>
	      <properties widgetMode="any">
	        <property name="template">/widgets/document_path_link_template.xhtml</property>
	      </properties>
	  </widget>
      <widget name="serviceref_refUrl" type="text">
	      <labels>
	        <label mode="any">label.easysoa.serviceref.refUrl</label>
	      </labels>
	      <translated>true</translated>
	      <fields>
	        <field>sref:refUrl</field>
	      </fields>
	  </widget>
    </layout>
    
  </extension>
</component>
