 	<action id="TAB_RELATIONS" enabled="false" />
   <!-- <action id="TAB_MY_SUBSCRIPTIONS" enabled="false" />
    <action id="view_comments" enabled="false" />
    <action id="TAB_CONTENT_HISTORY" enabled="false" />
    <action id="TAB_PREVIEW" enabled="false" />
