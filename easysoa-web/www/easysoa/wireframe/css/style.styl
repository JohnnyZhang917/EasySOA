body 
  font-family Arial, sans-serif
  font-size 11pt
  margin 0
  background-color #D4EFFA

// Header

header
  background-color #EFF
  padding 10px 5px 0 5px

#header1
  width 100%
  height 60px
 
#logo
  float left

#userbox
  float right
  margin-top 10px
  
#header2
  width 100%
  height 40px
  border-bottom 2px solid black

#notificationicon
  position relative
  top -40px
  left 88px
  background-color #FCB
  width 20px
  height 20px
  border 1px solid red
  border-radius 10px


// Header tabs

.bigtab
  float left
  border 2px solid black
  width 80px
  margin-left 20px
  text-align center
  padding-top 10px
  height 28px
  background-color white
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;

.open
  text-align left
  
.bigtabtext
  float left
  padding-left 5px
  text-align center
  width 90px
  
.bigtabtext img
  position relative
  top -20px
  
.bigtabtext a
  position relative
  top 10px
  width 90px
  text-align center
  font-size 10pt
  display block
  
.bigtabspacer
  float left
  height 30px
  width 30px
  
.bigtabsep
  border-left 1px solid black
  height 32px
  width 1px
  float left
  margin-left 5px
  margin-top -6px
  
.bigtabsep.small
  border-color #AAA
  margin-top 0
  height 20px
  
  
#doccontents
  padding 10px
  
#breadcrumbs
  border-bottom 1px solid grey
  font-size: 10pt


// Navigation tree

#navtree
  position absolute
  top 112px
  bottom 0
  border-right 2px solid #000
  padding 0 2px 0 0
  width 210px
  min-height 500px
  background-color white
  
#navtree.navoptionsmode
  background-color #DEF
  
#navtreetitle
  border 2px solid #555
  border-radius 5px
  padding 5px
  text-align center
  width 180px
  margin 10px

.navtreecontents
  margin 10px
  width 180px
  
// Left tabs

#lefttabs
  position absolute
  top 160px
  left 225px
  width 80px
  padding-top 15px
  margin-right 7px
  
.lefttab
  width 100px
  border 2px solid black
  padding 5px
  margin-bottom 10px
  background-color white
  
.lefttabspacer
  width 80px
  height 20px
  font-size 10pt
  color grey
  
  
// Contents

#contents
  margin 5px 5px 5px 212px
  padding 10px
  
#contents.wide
  margin-left 5px
  
.contentbox
  border 1px solid black
  padding 10px
  margin 5px
  margin-top 10px
  background-color white
  
.contentbox .title
  border 1px solid black
  margin -11px
  margin-bottom 5px
  padding 5px
  background-color #EEE
  color #555
  font-size 12pt
  font-weight bold
  font-style italic

.contentbox ul
  width 100%
  margin-top -5px
  padding-left 10px
  margin-bottom 0

.contentbox li
  width 100%
  list-style-type none
  
  
// Div convenience classes
  
.third
  width 30%
  float left
  
.half
  width 47%
  float left
  
.quarter
  width 24%
  float left

.threequarters
  width 74%
  float left
  
.all
  width 100%
  float left
  margin-bottom 10px
  
.centered
  float left
  text-align center
  
.box
  border 2px solid black
  padding 5px

.bordered
  border 1px solid #999
  padding 5px


// Special pages

.wizard
  font-size 18pt
  line-height 28pt


// Tags customization

td, th
  border 1px solid #CCC
  padding 3px
  
h1
  margin-bottom 0
  font-weight normal
  
h1.title
  margin-top 15px
  margin-left 225px
  
h2
  margin-top 0
  font-size 12pt
  font-weight normal
  
h3
  margin-bottom 10px
  
p
  margin-top 5px
  
a
  text-decoration none
  font-weight bold
  color darkblue

a.fake
  font-weight normal
  text-decoration none
  cursor default
  
a.fake:hover
  text-decoration none
  
a:hover
  text-decoration underline

