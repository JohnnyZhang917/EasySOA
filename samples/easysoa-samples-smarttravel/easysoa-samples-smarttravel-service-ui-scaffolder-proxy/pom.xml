				<defaultGoal>org.ow2.frascati.mojo:frascati-launcher-plugin:1.4:exec</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.ow2.frascati.mojo</groupId>
						<artifactId>frascati-launcher-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<executable>java</executable>
							<!--<arguments> <argument>-Dcxf.config.file.url=src/main/resources/configurationCXF.xml</argument> 
								</arguments> -->
							<!--<composite>smart-travel</composite> -->
							<composite>RestSoapProxy</composite>
							<useFscript>false</useFscript>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>org.ow2.frascati</groupId>
								<artifactId>frascati-binding-factory</artifactId>
								<version>1.4</version>
							</dependency>
							<dependency>
								<groupId>org.ow2.frascati</groupId>
								<artifactId>frascati-implementation-fractal</artifactId>
								<version>1.4</version>
							</dependency>
						</dependencies>						
					</plugin>
				</plugins>
			</build>
